doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title=namePage
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" )
    body 
        nav.navbar.navbar-expand-lg.navbar-light.bg-light
            a.navbar-brand(href="/") inicio
            a.navbar-brand(href="/productos") productos
            a.navbar-brand(href="/formulario") formulario
        div 
            h1.text-center Productos Cargados
        if productExist
            table.table.table-dark.table-striped.w-75.m-auto 
                tr.thead-dark.text-center
                    th Nombre 
                    th Price 
                    th Imagen 
                each i in product 
                    tr.table-danger.text-center
                        td=i.title
                        td=i.price
                        td
                            img(src=i.thumbnail, alt="" style={width : '50px'})
        else
            h2.text-center No Hay Productos