doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title=formulario
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" )
    body 
        nav.navbar.navbar-expand-lg.navbar-light.bg-light
            a.navbar-brand(href="/") inicio
            a.navbar-brand(href="/productos") productos
            a.navbar-brand(href="/formulario") formulario
        div 
            h1.text-center Formulario
        form(action="/productos", method="post").d-flex.flex-column.w-50.m-auto
            .input-group.input-group-sm.mb-3
                span.input-group-text#inputGroup-sizing-sm nombre botin
                input(type="text", name="title",aria-label="Sizing example input",aria-describedby="inputGroup-sizing-sm").form-control
            .input-group.input-group-sm.mb-3 
                span.input-group-text#inputGroup-sizing-sm precio 
                input(type="text", name="price",aria-label="Sizing example input",aria-describedby="inputGroup-sizing-sm").form-control
            .input-group.input-group-sm.mb-3 
                span.input-group-text#inputGroup-sizing-sm imagen botin 
                input(type="text", name="thumbnail",aria-label="Sizing example input",aria-describedby="inputGroup-sizing-sm").form-control
            button(type="submit").btn.btn-primary.w-25.m-auto Cargar Producto