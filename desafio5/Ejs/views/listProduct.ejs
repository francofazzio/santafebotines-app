<%- include("./partials/head.ejs")   %>
<body class="container">
    <%- include("./partials/header.ejs")   %>

    <h2 class="text-center">Tabla de Productos</h2>
    <% if (productExist) { %>
        <table class="table table-dark table-striped border rounder">
            <tr class="thead-dark">
                <th >Nombre</th>
                <th >Price</th>
                <th >Img</th>
            </tr>
        <% product.forEach(e => { %>
                <tr class="table-danger">
                <td class="table-danger"><%= e.title %></td>
                <td class="table-danger"><%= e.price %></td>
                <td class="table-danger"><img style="width: 25px ;" src="<%= e.thumbnail %>" alt=""></td>
            </tr> 
            
        <% }); %>
            
        <% } else { %>
          <h2 class="text-center">No Hay Productos Cargados</h2> 
        <% }  %>

    <%- include("./partials/scriptBtps.ejs")   %>
</body>
</html>