<%- include("./partials/head.ejs")   %>
<body class="container">
    <%- include("./partials/header.ejs")   %>

    <h2 class="text-center">Registro</h2>

    <form action="/register" method="post" class="d-flex w-75 m-auto flex-column">
        <div class="input-group input-group-sm  mb-3 ">
            <span class="input-group-text" id="inputGroup-sizing-sm">Usuario</span>
            <input required name="username" type="email" id="email" placeholder="Ingrese su email" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
        </div>
        <div class="input-group input-group-sm  mb-3 ">
            <span class="input-group-text" id="inputGroup-sizing-sm">nombre</span>
            <input required name="name" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
        </div>
        <div class="input-group input-group-sm  mb-3 ">
            <span class="input-group-text" id="inputGroup-sizing-sm">Apellido</span>
            <input required name="Apellido" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
        </div>
        <div class="input-group input-group-sm  mb-3 ">
            <span class="input-group-text" id="inputGroup-sizing-sm">Contrase√±a</span>
            <input required name="password" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
        </div>
        <div class="input-group input-group-sm  mb-3 ">
            <span class="input-group-text" id="inputGroup-sizing-sm">Telefono</span>
            <input required name="telefono" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
        </div>
        <button type="submit" class="btn btn-primary w-25 m-auto">Cargar Producto</button>
    </form>
    <%- include("./partials/scriptBtps.ejs")   %>
</body>
</html>